<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@color/white"
        android:paddingBottom="@dimen/api_test_button_margin_vertical"
        android:paddingTop="@dimen/api_test_button_margin_vertical"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/expand_more_arrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/api_test_button_margin_horizontal"
        android:src="@drawable/ic_navigate_next"/>

</RelativeLayout>